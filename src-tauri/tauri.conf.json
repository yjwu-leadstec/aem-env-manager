{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AEM Environment Manager",
  "version": "0.2.12",
  "identifier": "com.aemdev.env-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AEM Environment Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AEM development environment manager",
    "longDescription": "A desktop application for AEM developers to manage and switch between development environments with one click.",
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdBMkJCOUU3QzhBOUI0QjEKUldTeHRLbkk1N2tyZWw4cmEvWFcwL2VrbzFjN21jaGNFSGJGU2FOdjd5WmNvbUxKaFFmSG1QTmsK",
      "endpoints": [
        "https://github.com/yjwu-leadstec/aem-env-manager/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
